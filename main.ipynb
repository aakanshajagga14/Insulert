import os
import time
import numpy as np
import pandas as pd
import matplotlib.pyplot as plt
import seaborn as sns

from sklearn.model_selection import train_test_split
from sklearn.metrics import confusion_matrix, classification_report

import tensorflow as tf
from tensorflow.keras import layers, models, callbacks

# -------------------------------------------------------------------
# Config
# -------------------------------------------------------------------
DATA_DIR = "../input/prepossessed-arrays-of-binary-data"
INFO_CSV = os.path.join(DATA_DIR, "1000_Binary Dataframe")
BATCH_SIZE = 16
EPOCHS = 30
RANDOM_STATE = 42

# -------------------------------------------------------------------
# Load metadata
# -------------------------------------------------------------------
info = pd.read_csv(INFO_CSV)
if "Unnamed: 0" in info.columns:
    info = info.drop(columns=["Unnamed: 0"])

print(info.head())
print(info["level"].value_counts())

# -------------------------------------------------------------------
# Load image arrays
# -------------------------------------------------------------------
bin90 = np.load(os.path.join(DATA_DIR, "1000_Binary_images_data_90.npz"))["a"]
bin128 = np.load(os.path.join(DATA_DIR, "1000_Binary_images_data_128.npz"))["a"]
bin264 = np.load(os.path.join(DATA_DIR, "1000_Binary_images_data_264.npz"))["a"]

y = info["level"].values

print(bin90.shape, bin128.shape, bin264.shape, y.shape)

# reshape flat vectors into images
bin90 = bin90.reshape(-1, 90, 90, 3)
bin128 = bin128.reshape(-1, 128, 128, 3)
bin264 = bin264.reshape(-1, 264, 264, 3)

# -------------------------------------------------------------------
# Choose one input size (example: 128x128)
# -------------------------------------------------------------------
X = bin128.astype("float32") / 255.0

X_train, X_val, y_train, y_val = train_test_split(
    X, y, test_size=0.2, random_state=RANDOM_STATE, stratify=y
)

num_classes = len(np.unique(y))

# -------------------------------------------------------------------
# Simple CNN model
# -------------------------------------------------------------------
def build_model(input_shape, num_classes):
    model = models.Sequential([
        layers.Conv2D(32, (3, 3), activation="relu", input_shape=input_shape),
        layers.MaxPooling2D((2, 2)),
        layers.Conv2D(64, (3, 3), activation="relu"),
        layers.MaxPooling2D((2, 2)),
        layers.Conv2D(128, (3, 3), activation="relu"),
        layers.MaxPooling2D((2, 2)),
        layers.Flatten(),
        layers.Dense(128, activation="relu"),
        layers.Dropout(0.5),
        layers.Dense(num_classes, activation="softmax"),
    ])
    model.compile(
        optimizer="adam",
        loss="sparse_categorical_crossentropy",
        metrics=["accuracy"],
    )
    return model


model = build_model(X_train.shape[1:], num_classes)
model.summary()

# -------------------------------------------------------------------
# Training
# -------------------------------------------------------------------
cb = [
    callbacks.EarlyStopping(
        monitor="val_loss", patience=5, restore_best_weights=True
    ),
    callbacks.ReduceLROnPlateau(
        monitor="val_loss", factor=0.5, patience=2, verbose=1
    ),
]

history = model.fit(
    X_train,
    y_train,
    validation_data=(X_val, y_val),
    epochs=EPOCHS,
    batch_size=BATCH_SIZE,
    callbacks=cb,
    verbose=1,
)

# -------------------------------------------------------------------
# Evaluation
# -------------------------------------------------------------------
val_loss, val_acc = model.evaluate(X_val, y_val, verbose=0)
print(f"Validation loss: {val_loss:.4f}")
print(f"Validation accuracy: {val_acc:.4f}")

y_pred = model.predict(X_val)
y_pred_labels = np.argmax(y_pred, axis=1)

print(classification_report(y_val, y_pred_labels))

cm = confusion_matrix(y_val, y_pred_labels)
plt.figure(figsize=(6, 5))
sns.heatmap(cm, annot=True, fmt="d", cmap="Blues", cbar=False)
plt.xlabel("Predicted")
plt.ylabel("True")
plt.tight_layout()
plt.show()
